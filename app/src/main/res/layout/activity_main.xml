<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" android:id="@+id/gridLayout" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="0"
            app:layout_column="0"
            android:id="@+id/imageView" android:onClick="increaseScore"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="0"
            app:layout_column="1"
            android:onClick="increaseScore"
            android:id="@+id/imageView2"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="0"
            app:layout_column="2"
            android:onClick="increaseScore"
            android:id="@+id/imageView3"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="1"
            app:layout_column="0"
            android:onClick="increaseScore"
            android:id="@+id/imageView4"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="1"
            app:layout_column="1"
            android:onClick="increaseScore"
            android:id="@+id/imageView5"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="1"
            app:layout_column="2"
            android:onClick="increaseScore"
            android:id="@+id/imageView6"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="2"
            app:layout_column="0"
            android:onClick="increaseScore"
            android:id="@+id/imageView7"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="2"
            app:layout_column="1"
            android:onClick="increaseScore"
            android:id="@+id/imageView8"/>

        <ImageView
            android:layout_width="125dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/panda"
            app:layout_row="2"
            app:layout_column="2"
            android:onClick="increaseScore"
            android:id="@+id/imageView9"/>

    </androidx.gridlayout.widget.GridLayout>
    <TextView
        android:text="Time:10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeText" android:gravity="center"
        android:fontFamily="casual"
        android:textColor="#844700"
        android:textAllCaps="true"
        android:textSize="30sp" android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.394"/>
    <TextView
        android:text="Score: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:textColor="#844700"
        android:textAllCaps="true"
        android:textAlignment="center" android:gravity="center" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.165" android:id="@+id/scoreText"/>
</androidx.constraintlayout.widget.ConstraintLayout>