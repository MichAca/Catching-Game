<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="No. of seconds: 10"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Score : 0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimer"/>
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewScore">

        <ImageView
            android:id="@+id/imageViewBird1"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/bird"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewDog1"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/dog"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewPanda1"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/panda"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewPig"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/pig"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewRabbit"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/rabbit"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewDog2"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/dog"
            android:onClick="scoring"/>
        <ImageView
            android:id="@+id/imageViewMonkey"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/monkey"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewPanda2"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/panda"
            android:onClick="scoring"/>

        <ImageView
            android:id="@+id/imageViewBird2"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/bird"
            android:onClick="scoring"/>


    </GridLayout>

</android.support.constraint.ConstraintLayout>